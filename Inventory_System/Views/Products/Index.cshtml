@model IEnumerable<Inventory_System.Models.Product>

@{
    ViewData["Title"] = "物品";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BatchNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManuFactor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WareHouse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BatchNumber.BatchNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManuFactor.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WareHouse.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
